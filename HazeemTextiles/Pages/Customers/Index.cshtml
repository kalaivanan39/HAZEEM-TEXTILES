@page
@model HazeemTextiles.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.CustomerID" class="btn btn-success">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.CustomerID" class="btn btn-info">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CustomerID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
